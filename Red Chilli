    <script>
        const firebaseConfig = {
            apiKey: "AIzaSyAIXpawpQH3yRozPbTzP7Tzm6IFsNVpAzQ",
            authDomain: "fake-earn-5d8bd.firebaseapp.com",
            databaseURL: "https://fake-earn-5d8bd-default-rtdb.asia-southeast1.firebasedatabase.app",
            projectId: "fake-earn-5d8bd",
            storageBucket: "fake-earn-5d8bd.firebasestorage.app",
            messagingSenderId: "763892818801",
            appId: "1:763892818801:web:ea1d0fe6a006616dbd8cd0"
        };
        firebase.initializeApp(firebaseConfig);
        const database = firebase.database();
        
        document.addEventListener('DOMContentLoaded', function () {
            let tg = window.Telegram.WebApp;
            let currentUser;
            // User Initialization
            if (tg && tg.initDataUnsafe && tg.initDataUnsafe.user && tg.initDataUnsafe.user.id) {
                currentUser = tg.initDataUnsafe.user;
                tg.ready();
            } else {
                currentUser = { id: 12345, first_name: "Test", last_name: "User", photo_url: "https://via.placeholder.com/50" };
            }
            
            // Setup User Info in Header
            const userNameEl = document.getElementById('user-name');
            const userPhotoEl = document.getElementById('user-photo');
            userNameEl.textContent = `${currentUser.first_name || ''} ${currentUser.last_name || ''}`.trim();
            userPhotoEl.src = currentUser.photo_url || "https://via.placeholder.com/50";
            
            // Load Dynamic Content from Firebase
            const configRef = database.ref('config');
            configRef.on('value', (snapshot) => {
                const config = snapshot.val();
                if (config) {
                    renderSupportPage(config.supportPage);
                    renderTasksPage(config.tasks);
                    renderWithdrawPage(config.withdrawPage);
                } else {
                    document.getElementById('main-content').innerHTML = `<div class="card" style="margin-top: 50px;"><h4>App configuration not found.</h4><p>Please contact support.</p></div>`;
                }
            });
            
            // Navigation Logic
            const navButtons = document.querySelectorAll('.nav-btn');
            const pages = document.querySelectorAll('.page');
            navButtons.forEach(button => {
                button.addEventListener('click', () => {
                    navButtons.forEach(btn => btn.classList.remove('active'));
                    pages.forEach(page => page.classList.remove('active'));
                    button.classList.add('active');
                    document.getElementById(button.getAttribute('data-page')).classList.add('active');
                });
            });
        });

        function renderSupportPage(config) {
            if (!config || !Array.isArray(config.items)) return;
            document.getElementById('support-page-title').textContent = config.title || "Support";
            const container = document.getElementById('support-content-area');
            container.innerHTML = '';
            config.items.forEach(item => {
                container.innerHTML += `
                    <div class="card">
                        <div class="icon-wrapper icon-bg-${item.icon}"><svg><use href="#icon-${item.icon}"></use></svg></div>
                        <h4>${item.title}</h4><p>${item.description}</p>
                        <button class="btn btn-primary" style="margin-top: 20px;" onclick="window.open('${item.buttonUrl}', '_blank')">${item.buttonText}</button>
                        <p class="task-info">${item.notice}</p>
                    </div>`;
            });
        }

        function renderTasksPage(tasks) {
            if (!Array.isArray(tasks)) return;
            const container = document.getElementById('tasks-list-area');
            container.innerHTML = '';
            tasks.forEach(task => {
                if (!task.enabled) return;
                let content = '';
                if (task.type === 'ads') {
                    content = `<div class="card"><div class="icon-wrapper icon-bg-${task.icon}"><svg><use href="#icon-${task.icon}"></use></svg></div><h4>${task.title}</h4><p>${task.description}</p><button class="btn btn-primary" style="margin-top: 20px;" onclick="handleAdTask('${task.adNetworks.monetag.zoneId}', '${task.adNetworks.gigapub.code}')">Verify ‚òë</button><p class="task-info">${task.notice}</p></div>`;
                } else if (task.type === 'social') {
                    const iconClass = `icon-bg-${task.icon.toLowerCase()}`;
                    const buttonsHTML = task.buttons.map(btn => `<button class="btn btn-primary" onclick="${btn.url ? `window.open('${btn.url}', '_blank')` : `alert('Action: ${btn.action}')`}">${btn.text}</button>`).join('');
                    content = `<div class="card"><div class="icon-wrapper ${iconClass}"><svg><use href="#icon-${task.icon}"></use></svg></div><h4>${task.title}</h4><p>${task.description}</p><div class="button-group">${buttonsHTML}</div><p class="task-info">‡¶™‡ßÅ‡¶∞‡¶∏‡ßç‡¶ï‡¶æ‡¶∞: ${task.reward} ‡¶ü‡¶æ‡¶ï‡¶æ</p></div>`;
                }
                container.innerHTML += content;
            });
        }

        function renderWithdrawPage(config) {
            if (!config) return;
            const infoText = (config.noticeText || "")
                .replace('{minAmount}', config.minAmount || 0)
                .replace('{minReferrals}', config.minReferrals || 0);
            document.getElementById('withdraw-info').textContent = infoText;

            const methodsSelect = document.getElementById('withdraw-methods');
            methodsSelect.innerHTML = '';
            if (Array.isArray(config.methods)) {
                config.methods.forEach(method => {
                    methodsSelect.innerHTML += `<option value="${method}">${method}</option>`;
                });
            }
        }
        
        function handleAdTask(monetagZoneId, gigapubCode) {
            alert(`Showing ads... Monetag: ${monetagZoneId}, Gigapub: ${gigapubCode}`);
        }
    </script>
